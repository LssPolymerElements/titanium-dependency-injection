{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "bower_components/polymer/types/polymer-element.d.ts",
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}